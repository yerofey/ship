{
  "apps": [
    {
      "name": "ship",
      "script": "./index.js",
      "watch": true,
      "ignore_watch": [
        ".git",
        "node_modules",
        "package.json",
        "package-lock.json",
        "pnpm-lock.yaml",
        "README.md",
        "LICENSE"
      ],
      "time": true,
      "env": {
        "NODE_ENV": "development"
      },
      "env_production": {
        "NODE_ENV": "production"
      },
      "instances": 1,
      "exec_mode": "cluster"
    }
  ]
}
